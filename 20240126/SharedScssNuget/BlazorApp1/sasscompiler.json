{
  "SourceFolder": "Styles/src",
  "TargetFolder": "wwwroot",
  "Arguments": "--style=compressed --no-source-map",
  "GenerateScopedCss": true,
  "ScopedCssFolders": [ "Page" ],
  "IncludePaths": [ "node_modules" ],

  /* You can override specific options based on the build configuration */
  "Configurations": {
    "Debug": { /* These options apply only to Debug builds */
      "Arguments": "--style=expanded --source-map"
    }
  }
}